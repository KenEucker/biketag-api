{
  "include": ["tests", "assets", "src"],

  "compilerOptions": {
    "noEmit": true,
    "lib": ["esnext", "dom"],
    "target": "es2015",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strictBindCallApply": true,

    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,

    "baseUrl": "./",
    "paths": {
      "#src/*": ["../src/*"],
      "#test-src": ["./src"]
    },

    "plugins": [{ "transform": "typescript-transform-paths" }]
  }
}
